{
  "name": "@ricann/storage-map",
  "version": "0.0.3",
  "description": "Use map structure to operate LocalStorage, SessionStorage, IndexDB and WebSQL",
  "keywords": [
    "localStorage",
    "sessionStorage",
    "indexDB",
    "storage",
    "Map"
  ],
  "homepage": "https://github.com/raozhanping/storage-map#readme",
  "bugs": {
    "url": "https://github.com/raozhanping/storage-map/issues"
  },
  "license": "MIT",
  "author": "raozhanping <raozhanping@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raozhanping/storage-map.git"
  },
  "main": "./lib/index.js",
  "module": "./lib/index.esm.js",
  "files": [
    "lib",
    "types"
  ],
  "scripts": {
    "start": "npx serve .",
    "build": "yarn clean && cross-env NODE_ENV=production rollup -c",
    "watch": "yarn build -- --watch",
    "clean": "rimraf lib",
    "lint": "eslint src --ext ts --format stylish",
    "fix": "yarn lint -- --fix",
    "prepublish": "yarn build",
    "test": "jest",
    "commit": "git-cz"
  },
  "types": "./types",
  "husky": {
    "hooks": {
      "pre-commit": "eslint .",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@types/jest": "^25.2.3",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "babel-eslint": "^10.1.0",
    "commitizen": "^4.1.2",
    "rollup": "^2.26.4",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "fs-extra": "^8.1.0",
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "jest-runner-eslint": "^0.7.6",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "rollup-plugin-peer-deps-external": "^2.2.3",
    "rollup-plugin-postcss": "^3.1.5",
    "rollup-plugin-terser": "^7.0.0",
    "rollup-plugin-typescript2": "^0.27.2",
    "ts-jest": "^25.5.1",
    "typescript": "^3.9.2"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "jest": {
    "projects": [
      {
        "displayName": "test",
        "roots": [
          "src"
        ],
        "preset": "ts-jest"
      },
      {
        "displayName": "lint",
        "runner": "jest-runner-eslint",
        "moduleFileExtensions": [
          "ts"
        ],
        "testMatch": [
          "<rootDir>/src/**/*.ts"
        ]
      }
    ]
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "bracketSpacing": true,
    "insertPragma": false,
    "arrowParens": "avoid",
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "lf"
  }
}
